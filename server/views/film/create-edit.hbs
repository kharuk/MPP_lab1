<h3>{{viewTitle}}</h3>

{{#if film.id}}
<form action="/films/{{film.id}}/edit" method="POST" autocomplete="off" class="needs-validation" novalidate>
{{else}}
<form action="/films/new" method="POST" autocomplete="off" class="needs-validation" novalidate>
{{/if}}
    <div>
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="name" value="{{film.name}}" maxlength="20" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Description</label>
            <textarea rows='3' type="text" class="form-control" name="description" placeholder="description" required>{{film.description}}</textarea>
            <div class="invalid-feedback">
                Please write a description.
            </div>      
        </div>
        <div class="form-group col-md-6">
            <label>Director</label>
            <input type="text" class="form-control" name="director" placeholder="director" maxlength="20" value="{{film.director}}" required>
            <div class="invalid-feedback">
                Please write a director.
            </div>   
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Submit</button>
        <a class="btn btn-secondary" href="/films">Back</a>
    </div>
</form>