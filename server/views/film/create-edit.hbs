<h3>{{viewTitle}}</h3>

{{#if film.id}}
<form action="/films/{{film.id}}/edit" method="POST" autocomplete="off">
{{else}}
<form action="/films/new" method="POST" autocomplete="off">
{{/if}}
    <div>
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="name" value="{{film.name}}">
        </div>
        <div class="form-group col-md-6">
            <label>Description</label>
            <input type="text" class="form-control" name="description" placeholder="description" value="{{film.description}}">
        </div>
        <div class="form-group col-md-6">
            <label>Director</label>
            <input type="text" class="form-control" name="director" placeholder="director" value="{{film.director}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Submit</button>
        <a class="btn btn-secondary" href="/films">Back</a>
    </div>
</form>