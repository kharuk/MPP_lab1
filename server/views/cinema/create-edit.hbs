<h3>{{viewTitle}}</h3>

{{#if cinema.id}}
<form action="/cinemas/{{cinema.id}}/edit" method="POST" autocomplete="off" class="needs-validation" novalidate>
{{else}}
<form action="/cinemas/new" method="POST" autocomplete="off" class="needs-validation" novalidate>
{{/if}}
    <div>
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="name" maxlength="30" value="{{cinema.name}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Phone</label>
            <input type="tel" pattern="^\d{7}$" class="form-control" name="phone" placeholder="phone" value="{{cinema.phone}}" required>
            <div class="invalid-feedback">  
                Please enter 7 digit mobile number.  
            </div>   
        </div>
        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="address" maxlength="60" value="{{cinema.address}}" required>
            <div class="invalid-feedback">
                Please write an address.
            </div>  
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Submit</button>
        <a class="btn btn-secondary" href="/cinemas">Back</a>
    </div>
</form>