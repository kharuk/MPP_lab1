<h3>{{viewTitle}}</h3>

{{#if cinema.id}}
<form action="/cinemas/{{cinema.id}}/edit" method="POST" autocomplete="off">
{{else}}
<form action="/cinemas/new" method="POST" autocomplete="off">
{{/if}}
    <div>
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="name" value="{{cinema.name}}">
        </div>
        <div class="form-group col-md-6">
            <label>Phone</label>
            <input type="text" class="form-control" name="phone" placeholder="phone" value="{{cinema.phone}}">
        </div>
        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="address" value="{{cinema.address}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Submit</button>
        <a class="btn btn-secondary" href="/cinemas">Back</a>
    </div>
</form>